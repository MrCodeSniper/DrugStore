<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_dialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00ffffff"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="228.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="19.0dip"
        android:background="#00ffffff">

        <LinearLayout
            android:id="@+id/lay_nei"
            android:layout_width="210.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="19.0dip"
            android:background="@drawable/shape_radius_opacity"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="20.0dip">

            <TextView
                android:id="@+id/text_dia_coupon"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1.0dip"
                android:ellipsize="end"
                android:lineSpacingExtra="9.0dip"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/text"
                android:textSize="@dimen/font_size_large_17" />

            <FrameLayout
                style="@style/coupon_dialog_img_frame"
                android:layout_width="100.0dip"
                android:layout_height="100.0dip"
                android:layout_marginBottom="10.0dip">

                <ImageView
                    android:id="@+id/img_dia_coupon"
                    android:layout_width="90.0dip"
                    android:layout_height="90.0dip"
                    android:scaleType="centerCrop" />

                <ProgressBar
                    android:id="@+id/coupon_progress_bar"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </FrameLayout>

            <TextView
                android:id="@+id/coupon_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3.0dip"
                android:ellipsize="end"
                android:lineSpacingExtra="7.0dip"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/text_sub"
                android:textSize="@dimen/font_size_small" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:text="使用有效期:"
                android:textColor="@color/text"
                android:textSize="@dimen/font_size_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coupon_dia_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:gravity="left"
                android:text=""
                android:textColor="@color/text"
                android:textSize="@dimen/font_size_small"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/btn_sure_coupon"
                android:layout_width="120.0dip"
                android:layout_height="40.0dip"
                android:background="@drawable/bg_dia_coupon"
                android:gravity="center_vertical"
                android:paddingBottom="10.0dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="10.0dip"
                android:paddingTop="10.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看详情"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/font_size_large_17" />

                <ImageView
                    android:layout_width="7.5dip"
                    android:layout_height="12.5dip"
                    android:layout_marginLeft="13.0dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_coupon_show" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_cancle_dia"
            android:layout_width="37.0dip"
            android:layout_height="37.0dip"
            android:layout_gravity="center|right|top"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_cancle_dia_coupon" />
    </FrameLayout>
</LinearLayout>