<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="51.0dip"
    android:background="@drawable/dd_list_item_selector"
    android:orientation="horizontal"
    android:padding="10.0dip">

    <ImageView
        android:id="@+id/portrait"
        android:layout_width="31.0dip"
        android:layout_height="31.0dip"
        android:layout_gravity="center_vertical"
        android:background="@color/orange" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxWidth="200.0dip"
        android:paddingLeft="15.0dip"
        android:singleLine="true"
        android:text="username"
        android:textColor="#ff333333"
        android:textSize="15.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="right">

        <FrameLayout
            android:id="@+id/mark_layout"
            android:layout_width="60.0dip"
            android:layout_height="23.0dip"
            android:layout_gravity="center|right">

            <TextView
                android:id="@+id/eachfans"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="互粉"
                android:textColor="#ff999999"
                android:textSize="12.0sp"
                android:visibility="gone"

                />

            <TextView
                android:id="@+id/follow"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/user_center_fans_txt"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="+关注"
                android:textColor="#ffffffff"
                android:textSize="12.0sp" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>