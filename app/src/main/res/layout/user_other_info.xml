<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:id="@+id/user_info_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip">

                <ImageView
                    android:id="@+id/user_info_avatar"
                    android:layout_width="45.0dip"
                    android:layout_height="45.0dip"
                    android:layout_marginBottom="15.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="15.0dip"
                    android:background="@color/orange" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10.0dip">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/user_info_mark1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ellipsize="end"
                            android:includeFontPadding="false"
                            android:maxWidth="200.0dip"
                            android:singleLine="true"
                            android:text="user_info_mark1"
                            android:textColor="@android:color/black"
                            android:textSize="15.0sp" />

                        <TextView
                            android:id="@+id/user_info_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="10.0dip"
                            android:text="user_info_gender"
                            android:textColor="#fff27263"
                            android:textSize="12.0sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/user_info_mark2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:paddingTop="3.0dip"
                        android:singleLine="true"
                        android:text="user_info_mark2"
                        android:textColor="@color/user_login_label"
                        android:textSize="12.0sp" />

                    <TextView
                        android:id="@+id/user_info_mark3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:paddingTop="3.0dip"
                        android:singleLine="true"
                        android:text="user_info_mark3"
                        android:textColor="@color/user_login_label"
                        android:textSize="12.0sp" />

                    <TextView
                        android:id="@+id/user_info_mark4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:paddingTop="3.0dip"
                        android:singleLine="true"
                        android:text="user_info_mark4"
                        android:textColor="@color/user_login_label"
                        android:textSize="12.0sp" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/setting_line" />

            <include layout="@layout/dd_setting_border" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:background="@drawable/dd_list_item_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="@string/user_signature"
                    android:textColor="@color/user_login_label"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/user_info_signature"
                  android:text="user_info_signature"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center|right"
                    android:includeFontPadding="false"
                    android:maxWidth="180.0dip"
                    android:singleLine="true"
                    android:textColor="@color/user_login_value"
                    android:textSize="15.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_extend_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <Button
                android:id="@+id/user_btn_im_chat"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="20.0dip"
                android:text="发消息"
                android:textColor="@color/white"
                android:textSize="14.0sp"
           />

            <Button
                android:id="@+id/user_btn_enter_page"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginBottom="20.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@color/white"
                android:text="进主页"
                android:textColor="#ff686868"
                android:textSize="14.0sp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>