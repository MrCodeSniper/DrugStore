<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ddalert_window_color"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/ddalert_menu_layout_padding">

    <ListView
        android:id="@+id/ddalert_menu_list"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:cacheColorHint="#00000000"
        android:divider="@color/ddalert_menu_list_divider_color"
        android:dividerHeight="0.5dip"
        android:listSelector="#00000000"
        android:scrollbars="none" />

    <Button
        android:id="@id/ddalert_menu_cancel_btn"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_marginTop="@dimen/ddalert_menu_cancel_marginTop"
        android:background="@drawable/ddalert_corners_circle_selector"
        android:gravity="center"
        android:paddingBottom="@dimen/ddalert_menu_list_item_padding"
        android:paddingTop="@dimen/ddalert_menu_list_item_padding"
        android:text="@string/ddalert_menu_cancel_text"
        android:textColor="@color/ddalert_cancel_color"
        android:textSize="@dimen/ddalert_menu_cancel_textSize" />
</LinearLayout>