<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_back_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background="#dddddd"
        android:clickable="true"
        android:drawableLeft="@drawable/back"
        android:gravity="center_vertical"
        android:text="确认订单" />

    <!-- 收货地址 -->

    <LinearLayout
        android:id="@+id/ll_address_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/order_ico_position" />

        <TextView
            android:id="@+id/tv_receive_address_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="\n请添加地址\n" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#dddddd" />

    <!-- 商品图片 -->

    <ImageView
        android:paddingRight="50dip"
        android:paddingLeft="50dip"
        android:paddingTop="20dip"
        android:paddingBottom="20dip"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:scaleType="fitXY"
        android:src="@drawable/welcome_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#dddddd" />

    <EditText
        android:id="@+id/et_message_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="买家留言:(选填)" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|right" >

        <View
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="合计：" />

        <TextView
            android:id="@+id/tv_price_main"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="￥0.0		"
            android:textColor="#dd5555" />

        <TextView
            android:id="@+id/tv_commit_main"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:background="#dd5555"
            android:clickable="true"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>