<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VerticalSwitchTextView">
        <attr name="switchDuaration" format="integer"/>
        <attr name="idleDuaration" format="integer"/>
        <attr name="switchOrientation">
            <enum name="up"  value="0"/>
            <enum name="down"  value="1"/>
        </attr>
        <attr name="alignment">
            <enum name="center" value="0"/>
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
        </attr>



    </declare-styleable>



    <declare-styleable name="MyToolbar">

        <attr name="rightButtonIcon" format="reference"/>
        <attr name="isShowSearchView" format="boolean"/>
        <attr name="rightButtonText" format="string"/>

    </declare-styleable>





</resources>