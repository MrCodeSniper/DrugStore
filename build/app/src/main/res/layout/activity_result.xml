<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff3f3f3"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/result_content_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result_content"
            android:textColor="@android:color/black"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/tv_scan_result"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:textColor="@android:color/black"
            android:textSize="18.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/result_info_layout"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15.0dip"
            android:visibility="visible">

            <ImageView
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:background="@drawable/header_shape"
                android:gravity="center_vertical"
                android:src="@drawable/dd_qrscan_result_touxiang_2x" />

            <TextView
                android:id="@+id/user_info_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20.0dip"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center|right"
                android:maxWidth="180.0dip"
                android:singleLine="true"
                android:textColor="@color/result_label"
                android:textSize="15.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/result_phone_layout"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/dd_list_item_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15.0dip"
            android:visibility="visible">

            <TextView
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="@string/user_phones"
                android:textColor="@color/result_label"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/user_info_phone"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:autoLink="all"
                android:gravity="center|right"
                android:maxWidth="180.0dip"
                android:textColor="@color/link_text"
                android:textSize="15.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/result_address_layout"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:background="@drawable/dd_list_item_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15.0dip"
            android:visibility="visible">

            <TextView
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="@string/user_addresses"
                android:textColor="@color/result_label"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/user_info_address"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center|right"
                android:maxWidth="180.0dip"
                android:singleLine="true"
                android:textColor="@color/result_label"
                android:textSize="15.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/result_email_layout"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:background="@drawable/dd_list_item_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15.0dip"
            android:visibility="visible">

            <TextView
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="@string/user_emails"
                android:textColor="@color/result_label"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/user_info_email"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:autoLink="all"
                android:gravity="center|right"
                android:maxWidth="180.0dip"
                android:textColor="@color/link_text"
                android:textSize="15.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/result_org_layout"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:background="@drawable/dd_list_item_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15.0dip"
            android:visibility="visible">

            <TextView
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="@string/user_org"
                android:textColor="@color/result_label"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/user_info_org"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center|right"
                android:maxWidth="180.0dip"
                android:singleLine="true"
                android:textColor="@color/result_label"
                android:textSize="15.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/result_url_layout"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/dd_list_item_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15.0dip"
            android:visibility="visible">

            <TextView
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="@string/user_url"
                android:textColor="@color/result_label"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/user_info_url"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:autoLink="all"
                android:gravity="center|right"
                android:maxWidth="180.0dip"
                android:textColor="@color/link_text"
                android:textSize="15.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/result_note_layout"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/dd_list_item_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15.0dip"
            android:visibility="visible">

            <TextView
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="@string/user_note"
                android:textColor="@color/result_label"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/user_info_note"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center|right"
                android:maxWidth="180.0dip"
                android:singleLine="true"
                android:textColor="@color/result_label"
                android:textSize="15.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_connect_laytout"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_gravity="center"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/save_selector"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="@string/user_save"
                android:textColor="@color/save_text"
                android:textSize="15.0sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>