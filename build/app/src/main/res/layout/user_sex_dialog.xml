<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/sex_man_layout"
        android:layout_width="fill_parent"
        android:layout_height="41.0dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:includeFontPadding="false"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip"
            android:singleLine="true"
            android:text="男"
            android:textColor="#ff000000"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/sex_man_selector"
            android:layout_width="14.0dip"
            android:layout_height="10.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15.0dip"
            android:background="@drawable/dd_menu_check" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:background="#ffe0e0e0" />

    <RelativeLayout
        android:id="@+id/sex_woman_layout"
        android:layout_width="fill_parent"
        android:layout_height="41.0dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:includeFontPadding="false"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip"
            android:singleLine="true"
            android:text="女"
            android:textColor="#ff000000"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/sex_woman_selector"
            android:layout_width="14.0dip"
            android:layout_height="10.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15.0dip"
            android:background="@drawable/dd_menu_check"
           />
    </RelativeLayout>
</LinearLayout>