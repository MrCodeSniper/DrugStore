<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/ll"
              android:gravity="center"
              android:background="@drawable/backgroundselector"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
.


  <ImageView
      android:id="@+id/iv"
      android:layout_marginTop="5dp"
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:src="@drawable/jinkou_selector"
      />

    <TextView android:id="@+id/tv_category"
        android:layout_gravity="center"
        android:textColor="@color/textcolorselector2"
        android:textSize="10sp"
        android:layout_margin="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门推荐"
        />



    <View
        android:id="@+id/view_line"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:background="@drawable/viewcolorselector"
        android:layout_height="2.5dp"></View>






</LinearLayout>