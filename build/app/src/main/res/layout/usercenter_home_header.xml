<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="210.0dip">

    <LinearLayout
        android:id="@+id/user_info_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_head_img"
            android:layout_width="62.0dip"
            android:layout_height="62.0dip"
            android:src="@drawable/dd_user_default_icon_2x" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="8.0dip">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:shadowColor="#ff000000"
                android:shadowDx="3.0"
                android:shadowDy="3.0"
                android:shadowRadius="3.0"
                android:text="@string/label_login_tip"
                android:textColor="#ffffffff"
                android:textSize="17.0sp" />

        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/user_level_pro"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="4.0dip"
        android:layout_below="@+id/user_info_layout"
        android:layout_marginLeft="34.0dip"
        android:layout_marginRight="34.0dip"
        android:layout_marginTop="12.0dip"
        android:max="100"
        android:progress="20"
        android:progressDrawable="@drawable/user_center_level_white"
        />

    <LinearLayout
        android:id="@+id/user_level_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_level_pro"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="8.0dip"
       >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:text="level"
                android:shadowRadius="2.0"
                android:textColor="#ffffffff"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/user_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingLeft="5.0dip"
                android:shadowDx="1.0"
                android:text="experience"
                android:shadowDy="1.0"
                android:shadowRadius="2.0"
                android:textColor="#ffffffff"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/user_experience_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingLeft="5.0dip"
                android:shadowDx="1.0"
                android:text="hint"
                android:shadowDy="1.0"
                android:shadowRadius="2.0"
                android:textColor="#ffffffff"
                android:textSize="11.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip">

            <TextView
                android:layout_width="15.0dip"
                android:layout_height="15.0dip"
                android:background="@drawable/dd_menu_points_2x" />

            <TextView
                android:id="@+id/user_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="2.0"
                android:text="points"
                android:textColor="#ffffffff"
                android:textSize="15.0sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>